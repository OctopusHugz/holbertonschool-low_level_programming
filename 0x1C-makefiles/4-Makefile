CC=gcc
SRC=main.c holberton.c
OBJ=main.o holberton.o
NAME=holberton
RM=rm
CFLAGS=-Wall -Werror -Wextra -pedantic

.PHONY: all $(NAME) clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all
