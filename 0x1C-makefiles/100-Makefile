CC=gcc
SRC=main.c holberton.c
OBJ=$(SRC:.c=.o)
NAME=holberton
CFLAGS=-Wall -Werror -Wextra -pedantic
DEPS=$(OBJ:.o=.d)

.PHONY: all $(NAME) clean oclean fclean re

all: $(NAME)

-include $(DEPS)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
